        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock Name="textBlock1" Text="TextBlock" Margin="12,12,12,48" />
        <Button Content="تایید"  HorizontalAlignment="Left" Margin="94,71,0,0" Name="OK" VerticalAlignment="Top" Click="OK_Click" />
